
<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p>Address: <%= @restaurant.address %></p>
  <p>Phone no: <%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category %> food</p>

  <h3>Reviews</h3>
  <% @restaurant.reviews.each do |review| %>
  <p>Rating: <%= review.rating %></p>
  <p><%= review.content %></p>
  <p>_____________________________</p>
  <% end %>

  <%= link_to "Back to overview", restaurants_path %>

  <h1>Add your review for <%= @restaurant.name %> </h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: Review::RATINGS  %>
    <%= f.input :content %>
    <%= f.button :submit %>
  <% end %>
</div>
